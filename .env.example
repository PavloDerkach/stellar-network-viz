# Stellar Network Visualization Configuration
# Copy this file to .env and update with your values

# Database Configuration
DATABASE_URL=sqlite:///database/stellar.db
# For PostgreSQL: postgresql://user:password@localhost:5432/stellar_viz

# Stellar Horizon API
STELLAR_HORIZON_URL=https://horizon.stellar.org
STELLAR_HORIZON_TESTNET_URL=https://horizon-testnet.stellar.org
USE_TESTNET=False

# API Settings
API_RATE_LIMIT=100  # Calls per minute
API_TIMEOUT=30      # Seconds
API_MAX_RETRIES=3

# Cache Settings
CACHE_ENABLED=True
CACHE_TTL=3600      # Cache time-to-live in seconds

# Data Processing
BATCH_SIZE=100
MAX_WALLETS=100     # Max wallets to analyze (set to null for unlimited)
MAX_TRANSACTIONS_PER_WALLET=1000

# Visualization
GRAPH_MAX_NODES=50
GRAPH_MAX_EDGES=200
DEFAULT_LAYOUT=force  # Options: force, circular, hierarchical, spectral

# Web Application
APP_HOST=0.0.0.0
APP_PORT=8501
DEBUG=False

# Logging
LOG_LEVEL=INFO
LOG_FILE=stellar_viz.log
